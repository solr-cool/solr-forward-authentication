{
    "authentication": {
        "class": "cool.solr.security.ForwardAuthPlugin"
    },
    "authorization": {
        "class": "cool.solr.security.DefaultRuleBasedAuthorizationPlugin",
        "defaultRole": "admin",
        "permissions": [
            {
                "name": "security-edit",
                "role": "admin"
            },
            {
                "name": "schema-edit",
                "role": "admin"
            },
            {
                "name": "config-edit",
                "role": "admin"
            },
            {
                "name": "core-admin-edit",
                "role": "admin"
            },
            {
                "name": "collection-admin-edit",
                "role": "admin"
            }
        ]
    }
}
